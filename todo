#!/usr/bin/env bash
#
# todo script

task=$2
todo=~/.todo

pri ()
    while read -r line; do
        echo "$((c++))    $line"
    done < "$todo"

del ()
    while read -r line; do
        ((task != c++)) && echo "$line"
    done < "$todo"

case $1 in
    add) echo "$task" >> "$todo";;
    del) echo "`del`"  > "$todo";;
    *) pri
esac
