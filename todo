#!/usr/bin/env bash
#
# todo script

todo=~/.todo

pri ()
    while read -r line; do
        echo "$((cpt++))    $line"
    done < $todo

del ()
    while read -r line; do
        (($1 != cpt++)) && echo "$line"
    done < $todo

case $1 in
    add) echo       "$2" >> $todo;;
    del) echo "$(del $2)" > $todo;;
    *) pri
esac
