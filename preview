#!/usr/bin/env bash
#
# center text

clear

# get terminal size
shopt -s checkwinsize

(:;:)

# center vertically
nb=$(wc -l < "$1")

nb=$(((LINES - nb) / 2))

for ((; i++ < nb;))
{
    echo
}

# center horizontally
while read -r line; do
    out=
    nb=${#line}

    nb=$(((COLUMNS - nb) / 2))

    for ((i = 0; i++ < nb;))
    {
        out="$out "
    }

    echo "$out$line"
done < "$1"
