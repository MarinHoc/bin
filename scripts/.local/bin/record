#!/bin/sh
#
# record with ffmpeg and slop

dir=~/pics/records
cur=$(date +%F_%H-%M-%S)

mkdir -p "$dir" || exit 1

hacksaw                               \
    -f  '%w %h %x %y'                 \
    -ns "$(bspc config border_width)" \
    -c  "$(bspc config focused_border_color)" | {
    read -r w h x y

    ffmpeg -loglevel 16 \
        -r 30           \
        -f x11grab      \
        -s "${w}x${h}"  \
        -i ":0.0+$x,$y" \
        -preset slow    \
        -c:v h264       \
        -crf 20         \
        "$dir/$cur.mp4"
}
