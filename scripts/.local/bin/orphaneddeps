#!/usr/bin/env bash
#
# find packages that can be removed

while read -r pkg; do
    # don't list personal / core ports
    while read -r line; do
        [[ $line =~ ^Path ]] && {
            IFS=/ read -ra array <<< $line

            [[ ${array[3]} =~ turquoise|core ]] || echo "$pkg"

            break
        }
    done < <(prt-get info "$pkg")
done < <(prt-get listorphans)
