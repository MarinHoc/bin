#!/usr/bin/env bash
#
# find missing dependencies

declare -A installed aliases

# store aliases
while IFS=': ' read -r alias orig; do
    aliases[$alias]=$orig
done < /var/lib/pkg/prt-get.aliases

list=$(prt-get listinst)

# store installed packages
while read -r; do
    for package in "${!aliases[@]}}"; {
        [[ $REPLY == "$package" ]] && {
            installed[${aliases[$package]}]=1

            break
        }
    }

    installed[$REPLY]=1
done <<< $list

# find missing dependencies
while read -r; do
    for dependency in $(prt-get quickdep "$REPLY"); {
        ((installed[$dependency])) || echo "$dependency"
    } &
done <<< $list

wait
