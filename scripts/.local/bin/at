#!/usr/bin/env bash
#
# at - run command at a specified time

BUILTINS_DIR=/usr/lib/bash

die() {
    printf '%s\n' "${1:-usage : ${0##*/} <time> <command>}" >&2
    exit 1
}

(($# < 2)) &&
    die

enable -f "$DIR/sleep" sleep

{
    while [[ $(printf '%(%R)T') != "$1" ]]; do
        sleep 10
    done

    "${@:2}"
} &
