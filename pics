#!/usr/bin/env bash
#
# rename pictures based on exifs

for file in "$@"; do
    var=$(exif -mt DateTime "$file")

    # exit if there is no date
    test "$var" || exit 1

    # format datas
    ext=${1##*.}
    var=${var//:/-}
    var=${var// /_}

    mv   "$file"  "$var.$ext"
    echo "$file -> $var.$ext"
done
