#!/bin/sh
#
# record with ffmpeg and slop

dir=~/imgs/records
cur=$(date +%F_%H-%M-%S)

mkdir -p "$dir" || exit 1

# get values from slop
slop -f '%w %h %x %y' | {
    read -r w h x y

    ffmpeg -loglevel 16 \
        -r 30           \
        -f x11grab      \
        -s "${w}x${h}"  \
        -i ":0.0+$x,$y" \
        -preset slow    \
        -c:v h264       \
        -crf 20         \
        "$dir/$cur.mp4"
}
